<UserControl x:Class="system_sprava_skladu.okno_pridej_skladovaci_pozice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:system_sprava_skladu"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Height="768" 
        Width="1024">
    <Grid>
        <GroupBox Header="Přidat novou skladovou pozici" Margin="10,10,10,597">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- První řádek -->
                    <RowDefinition Height="Auto"/>
                    <!-- Druhý řádek -->
                </Grid.RowDefinitions>

                <Label Content="Skladovací pozice - číslo" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="skladovaciPoziceTextBox" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,10,0"/>

                    <Button x:Name="pridatSkladovaciPoziciButton" Content="Přidat" Grid.Column="1" VerticalAlignment="Center" Height="36" Width="88" HorizontalAlignment="Left"/>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
